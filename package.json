{
  "name": "shopshop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "typecheck": "tsc --noEmit",
    "db:push:dev": "env-cmd -f .env.local drizzle-kit up",
    "db:push:prod": "env-cmd -f .env.local cross-env POSTGRES_PREFIX=prod_ drizzle-kit up",
    "db:generate:dev": "env-cmd -f .env.local drizzle-kit generate:pg",
    "db:generate:prod": "env-cmd -f .env.local cross-env POSTGRES_PREFIX=prod_ drizzle-kit generate"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@types/node": "22.10.1",
    "@types/react": "18.3.13",
    "@types/react-dom": "18.3.1",
    "@vercel/postgres": "^0.10.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "drizzle-orm": "^0.37.0",
    "env-cmd": "^10.1.0",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.0.3",
    "next": "15.0.3",
    "pg": "^8.13.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwind-merge": "^2.5.5",
    "tiny-invariant": "^1.3.3",
    "typescript": "5.7.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.29.1",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.16"
  }
}
