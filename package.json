{
  "name": "shopshop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "typecheck": "tsc --noEmit",
    "db:push:dev": "env-cmd -f .env.local drizzle-kit up",
    "db:push:prod": "env-cmd -f .env.local cross-env POSTGRES_PREFIX=prod_ drizzle-kit up",
    "db:generate:dev": "env-cmd -f .env.local drizzle-kit generate:pg",
    "db:generate:prod": "env-cmd -f .env.local cross-env POSTGRES_PREFIX=prod_ drizzle-kit generate"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-icons": "^1.3.2",
    "@types/node": "22.13.4",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@vercel/postgres": "^0.10.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "drizzle-orm": "^0.39.3",
    "env-cmd": "^10.1.0",
    "eslint": "^9.20.1",
    "eslint-config-next": "^15.1.7",
    "next": "15.1.7",
    "pg": "^8.13.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^3.0.1",
    "tiny-invariant": "^1.3.3",
    "typescript": "5.7.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.7",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "drizzle-kit": "^0.30.4",
    "eslint-config-prettier": "^10.0.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.1",
    "tailwindcss": "^4.0.7"
  }
}
